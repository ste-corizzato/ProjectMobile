<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_map"
        android:layout_width="277dp"
        android:layout_height="98dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="372dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="261dp"
        android:text="PLAY!"
        android:textSize="46sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_leaderboards"
        android:layout_width="182dp"
        android:layout_height="59dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="184dp"
        android:text="LEADERBOARDS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_map" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="216dp"
        android:layout_marginBottom="187dp"
        android:contentDescription="@string/account_image"
        app:layout_constraintBottom_toTopOf="@+id/button_map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@android:color/holo_orange_light" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="179dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_map"
        app:srcCompat="@drawable/impostazioni" />

</androidx.constraintlayout.widget.ConstraintLayout>