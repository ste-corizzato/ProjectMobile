<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00DF0A0A"
    tools:context=".fragment_profile">

    <EditText
        android:id="@+id/text_nome"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="86dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="86dp"
        android:backgroundTint="#009688"
        android:ems="10"
        android:hint="CHANGE YOUR NAME"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_change_img" />

    <Button
        android:id="@+id/Modifica"
        android:layout_width="221dp"
        android:layout_height="55dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="86dp"
        android:onClick="onClick"
        android:text="SAVE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_nome" />

    <ImageView
        android:id="@+id/imageViewPicture"
        android:layout_width="121dp"
        android:layout_height="121dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="136dp"
        android:src="@drawable/avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_change_img"
        android:layout_width="131dp"
        android:layout_height="48dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="131dp"
        android:onClick="onClick"
        android:text="Change picture"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPicture" />

</androidx.constraintlayout.widget.ConstraintLayout>